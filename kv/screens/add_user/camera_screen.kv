<AddUserCameraScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        # Back Button
        Button:
            text: "Back"
            on_press: root.manager.current = "add_user_index"
            size_hint_y: 0.1

        # Title Label
        Label:
            text: "[b]Mengambil Gambar untuk {}[/b]".format(root.user)
            markup: True
            font_size: 24 
            size_hint_y: 0.1

        # Main Content Layout
        BoxLayout:
            orientation: "vertical"
            spacing: 10

            # Image Display
            Image:
                id: camera_image
                size_hint_y: 0.7  
                allow_stretch: True  

            # Instructions and Capture Button
            BoxLayout:
                orientation: "vertical"
                size_hint_y: 0.3  

                Label:
                    text: "Pastikan ada persegi berwarna hijau sebelum menekan tombol"
                    size_hint_y: 0.7
                    halign: "center" 
                    valign: "middle"
                    text_size: self.width, None  
                    font_size: 18  

                Button:
                    text: "Ambil Gambar"
                    size_hint_y: 0.3
                    on_press: root.take_picture()  

                Button:
                    text: "Train Model"
                    size_hint_y: 0.3
                    on_press: root.navigate_to_train_screen(root.user_id, root.user)
